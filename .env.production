# 生产环境配置文件

# 数据库配置
DATABASE_URL=mysql+pymysql://instagramproject:SWaexZfEtwSTAfHp@mysql:3306/instagramproject

# Redis配置
REDIS_URL=redis://redis:6379/0

# JWT配置
SECRET_KEY=CHANGE_THIS_IN_PRODUCTION_USE_LONG_RANDOM_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# 应用配置
DEBUG=False
ENVIRONMENT=production
CORS_ORIGINS=["https://yourdomain.com", "https://www.yourdomain.com"]

# Instagram API配置
INSTAGRAM_API_TIMEOUT=60
MAX_RETRY_ATTEMPTS=5
RATE_LIMIT_PER_MINUTE=120

# 文件上传配置
MAX_FILE_SIZE=52428800  # 50MB
UPLOAD_DIR=/app/uploads

# 日志配置
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log

# WebSocket配置
WS_HEARTBEAT_INTERVAL=60
WS_MAX_CONNECTIONS=1000

# 调度器配置
SCHEDULER_ENABLED=True
MAX_CONCURRENT_TASKS=20
TASK_TIMEOUT=600

# 邮件配置
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-production-email@yourdomain.com
SMTP_PASSWORD=your-production-app-password
SMTP_FROM_EMAIL=your-production-email@yourdomain.com

# 监控配置
MONITORING_ENABLED=True
HEALTH_CHECK_INTERVAL=30

# 缓存配置
CACHE_TTL=7200
CACHE_MAX_SIZE=10000

# 代理配置
PROXY_ROTATION_ENABLED=True
PROXY_HEALTH_CHECK_INTERVAL=180

# 安全配置
ALLOWED_HOSTS=["yourdomain.com", "www.yourdomain.com"]
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True

# 数据库连接池配置
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30

# 性能配置
WORKERS=4
WORKER_CONNECTIONS=1000
KEEPALIVE_TIMEOUT=65

# 备份配置
BACKUP_ENABLED=True
BACKUP_SCHEDULE="0 2 * * *"  # 每天凌晨2点
BACKUP_RETENTION_DAYS=30

# 监控和告警
SENTRY_DSN=your-sentry-dsn
SLACK_WEBHOOK_URL=your-slack-webhook-url

# 限流配置
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=3600

# SSL配置
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# 域名配置
DOMAIN_NAME=yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com
